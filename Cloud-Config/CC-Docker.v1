#cloud-config

users:
  - name: david
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
      - ssh-rsa
 david@LAPTOP-1EM28FLO

service:
  -docker
  -curl

runcmd:
  - apt-get update
  - apt-get install -y prometheus-node-exporter
  - curl -fsSL https://get.docker.com -o get-docker.sh && sh get-docker.sh
  - systemctl start docker
  - docker run -d --name prometheus -p 9090:9090 prom/prometheus
  - docker run -d --name grafana -p 3000:3000 grafana/grafana
  - mkdir /data  # Erstelle ein Verzeichnis fÃ¼r den Container-Speicher
  - echo "/dev/xvdb /data ext4 defaults,nofail 0 2" >> /etc/fstab  
  - mkfs.ext4 /dev/xvdb  # Formatieren des Volumes als ext4-Dateisystem
  - mount /data  # Mounten des Volumes im Verzeichnis /data
